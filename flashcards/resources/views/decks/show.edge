<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      {{ deck.name }}
    </title>
    <link rel="stylesheet" href="/resources/css/show.css" />
  </head>
  <body>

    <!-- Header section (Include header partial) -->
    @include('partials/HeaderPostLogin')

    <!-- Main Content -->
    <main class="container">
      <!-- Deck Details -->
      @include('partials/flash_messages')
      <div class="deck-details">
        <h1>
          Titre du deck : {{ deck.name }}
        </h1>
        <p class="deck-description">
          Description du deck: {{ deck.description || 'No description available' }}
        </p>

        <!-- Action Buttons -->
        <div class="button-group">
          <a href="{{ route('decks.edit', { id: deck.id }) }}" class="btn">Modify</a>
          <button class="btn delete-button" data-deck-id="{{ deck.id }}">Delete Deck</button>
        </div>
      </div>

      <!-- Add Flashcard Form -->
      <div class="flashcard-form deck-form">
        <!-- Added deck-form class here -->
        <h2>
          Add a Flashcard
        </h2>
        <form action="{{ route('flashcards.store', { deckId: deck.id }) }}" method="POST">
          <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

          <div class="form-group">
            <label for="question">Question</label>
            <input type="text" name="question" id="question" required />
          </div>

          <div class="form-group">
            <label for="answer">Answer</label>
            <input type="text" name="answer" id="answer" required />
          </div>

          <button type="submit" class="btn">Add Flashcard</button>
        </form>
      </div>

      <!-- Flashcards List -->
      <!-- Flashcards Table -->
      <div class="flashcard-list">
        <h3>
          Flashcards
        </h3>

        <table class="flashcard-table">
          <thead>
            <tr>
              <th>
                Nom de la carte
              </th>
              <th>
                Description
              </th>
              <th>
                Actions
              </th>
            </tr>
          </thead>
          <tbody>
            @if(deck.flashcards && deck.flashcards.length > 0)
              @each(flashcard in deck.flashcards)
                <tr>
                  <td>
                    {{ flashcard.question }}
                  </td>
                  <td>
                    {{ flashcard.answer }}
                  </td>
                  <td class="flashcard-actions">
                    <a href="{{ route('flashcards.edit', { id: flashcard.id }) }}" class="btn btn-edit">Modifier</a>
                    <button class="btn btn-delete delete-flashcard" data-flashcard-id="{{ flashcard.id }}">Supprimer</button>
                  </td>
                </tr>
              @endeach
            @else
              <tr>
                <td colspan="3" class="no-flashcards">
                  Aucune carte pour ce deck.
                </td>
              </tr>
            @endif
          </tbody>
        </table>
      </div>

    </main>

    <!-- Footer section (Include footer partial) -->
    @include('partials/footer')

  </body>
</html>
