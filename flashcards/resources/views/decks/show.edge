    <!-- Script pour gérer la suppression du deck via fetch -->
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        // Gestion de la suppression du deck
        const deleteDeckButton = document.getElementById("delete-deck-button");
        if (deleteDeckButton) {
          deleteDeckButton.addEventListener("click", function() {
            const url = deleteDeckButton.getAttribute("data-url");
            if (confirm("Voulez-vous vraiment supprimer ce deck ?")) {
              fetch(url, {
                method: "DELETE",
                headers: {
                  "Content-Type": "application/json",
                  "X-CSRF-TOKEN": "{{ csrfToken }}"
                }
              }).then(response => response.json()).then(data => {
                if (data.success) {
                  // Redirigez vers la liste des decks, par exemple
                  window.location.href = "/decks";
                } else {
                  alert(data.message || "Erreur lors de la suppression du deck.");
                }
              }).catch(error => {
                console.error("Erreur : ", error);
                alert("Erreur lors de la suppression du deck.");
              });
            }
          });
        }
        // Gestion de la suppression des flashcards
        document.querySelectorAll(".delete-flashcard").forEach(function(button) {
          button.addEventListener("click", function() {
            const url = button.getAttribute("data-url");
            if (confirm("Voulez-vous vraiment supprimer cette carte ?")) {
              fetch(url, {
                method: "DELETE",
                headers: {
                  "Content-Type": "application/json",
                  "X-CSRF-TOKEN": "{{ csrfToken }}"
                }
              }).then(response => response.json()).then(data => {
                if (data.success) {
                  // Recharger la page pour mettre à jour la liste des flashcards
                  location.reload();
                } else {
                  alert(data.message || "Erreur lors de la suppression de la carte.");
                }
              }).catch(error => {
                console.error("Erreur : ", error);
                alert("Erreur lors de la suppression de la carte.");
              });
            }
          });
        });
      });
    </script>

    <!-- Footer section (Include footer partial) -->
