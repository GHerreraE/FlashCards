<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
      Création de Decks - FlashCards
    </title>
    @vite(['resources/css/homeuser.css', 'resources/js/app.js'])
  </head>
  <body>
    @include('partials/headerPostLogin')

    <main class="homeuser-main">
      <!-- Section de création de deck -->
      <section class="deck-creation">
        <h1>
          Créer un nouveau Deck
        </h1>
        <form action="{{ route('createDeck') }}" method="POST" class="horizontal-form">
          <!-- Injection du token CSRF -->
          <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

          <div class="form-group">
            <label for="deck-name">Nom du Deck :</label>
            <input type="text" id="deck-name" name="name" placeholder="Nom du deck" required />
          </div>

          <div class="form-group">
            <label for="deck-description">Description :</label>
            <input type="text" id="deck-description" name="description" placeholder="Description" required />
          </div>

          <button type="submit" class="btn">Ajouter Deck</button>
        </form>
      </section>

      <!-- Section d'affichage de la liste des decks -->
      <section class="deck-list">
        <h2>
          Mes Decks
        </h2>
        <ul>
          @each(deck in decks)
            <li class="deck-item">
              <h3>
                {{ deck.name }}
              </h3>
              <p>
                {{ deck.description }}
              </p>
            </li>
          @endeach
        </ul>
      </section>
    </main>

    @include('partials/footer')
  </body>
</html>
