<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
      Création de Decks - FlashCards
    </title>
    @vite(['resources/css/homeuser.css', 'resources/js/app.js'])
  </head>
  <body>
    @include('partials/headerPostLogin')

    <main class="homeuser-main">
      <!-- Section to create a new deck -->
      @include('partials/flash_messages')
      <section class="deck-creation">

        <h1>
          Créer un nouveau Deck
        </h1>

        <form action="/decks/create" method="GET" class="horizontal-form">
          <button type="submit" class="btn">Ajouter Deck</button>
        </form>
      </section>

      <!-- Section to display deck list -->
      <section class="deck-list">
        <h2>
          Mes Decks
        </h2>
        <ul>
          @if(decks && decks.length > 0)
            <!-- Ensure decks is an array -->
            @each(deck in decks)
              <li class="deck-item">
                <a href="/decks/{{ deck.id }}" class="deck-link">
                  <h3>
                    {{ deck.name }}
                  </h3>
                  <p>
                    {{ deck.description }}
                  </p>
                </a>
              </li>
            @endeach
          @else
            <p>
              Aucun deck trouvé
            </p>
            <!-- No decks found message -->
          @endif
        </ul>
      </section>
    </main>

    @include('partials/footer')
  </body>
</html>
